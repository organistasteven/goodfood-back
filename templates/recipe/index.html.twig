{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}

{% block body %}
<div class="backshow">
    <h1>Liste des recettes</h1>
 <a class="btn btn-success" href="http://localhost:3000/recipe/add">Ajout des recettes</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Durée totale de préparation</th>
                <th>Temps de cuisson</th>
                <th>Temps de préparation</th>
                <th>Portion</th>              
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
        
            <tr>
                <td>{{ recipe.id }}</td>
                <td>{{ recipe.name }}</td>
                <td>{{ recipe.description }}</td>
                <td>{{ recipe.duration }}</td>
                <td>{{ recipe.heatTime }}</td>
                <td>{{ recipe.prepTime }}</td>
                <td>{{ recipe.portion }}</td>
                <td> <img class="recipePic" src="{{ asset('' ~ recipe.nameImage ~ '') }}"</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_recipe_show', {'id': recipe.id}) }}">Détail</a>
                   <a class="btn btn-warning" href="#">Edition</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
            
         

        {% endfor %}
        </tbody>
    </table>

   
</div>
{% endblock %}
