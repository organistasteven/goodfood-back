{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
<div class = "backshow" "border_form">
    <h1>Recette</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ recipe.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recipe.description }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ recipe.duration }}</td>
            </tr>
            <tr>
                <th>Temps de cuisson</th>
                <td>{{ recipe.heatTime }}</td>
            </tr>
            <tr>
                <th>Temps de préparation</th>
                <td>{{ recipe.prepTime }}</td>
            </tr>
            <tr>
                <th>Portion</th>
                <td>{{ recipe.portion }}</td>
            </tr>
            <tr>
                <th>Etapes</th>
                <td>
                    {% for step in recipe.steps %}
                    {{ step.getName() }}. {{ step.content }}<br>
                    {% endfor %}
                </td>
                <tr>
                 <th>Ingrédients</th>
                 <td>
                    {% for compositions in recipe.compositions %}
                    {{ compositions.food }}<br>
                    {% endfor %}
                </td>               
                </tr>

            <tr>
                <th>Image</th>
                <td>{{ recipe.nameImage }}</td>
            </tr>

        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('app_recipe_index') }}">Retour à l'index</a>

    <a class="btn btn-warning " href="#">Edition</a>

    {{ include('recipe/_delete_form.html.twig') }}
</div>
{% endblock %}
